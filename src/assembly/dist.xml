<?xml version="1.0"?>
<assembly>

  <id>dist</id>
  
  <formats>
    <format>zip</format>
  </formats>
  
  <fileSets>
    <fileSet>
      <directory>${basedir}/../op4j/target/apidocs/</directory>
      <outputDirectory>/apidocs/op4j</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../op4j-ognl/target/apidocs/</directory>
      <outputDirectory>/apidocs/op4j-ognl</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../op4j-jodatime/target/apidocs/</directory>
      <outputDirectory>/apidocs/op4j-jodatime</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../op4j/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>op4j-${project.version}.jar</include>
        <include>op4j-${project.version}-javadoc.jar</include>
        <include>op4j-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../op4j-ognl/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>op4j-ognl-${project.version}.jar</include>
        <include>op4j-ognl-${project.version}-javadoc.jar</include>
        <include>op4j-ognl-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../op4j-jodatime/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>op4j-jodatime-${project.version}.jar</include>
        <include>op4j-jodatime-${project.version}-javadoc.jar</include>
        <include>op4j-jodatime-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>README.txt</include>
        <include>NOTICE.txt</include>
      </includes>
    </fileSet>
  </fileSets>
    
    
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets> 
  
  
</assembly>
